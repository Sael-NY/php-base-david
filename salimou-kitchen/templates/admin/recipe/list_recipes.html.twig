{% extends 'admin/base.html.twig' %}

{% block body %}

    <h3>Liste des recettes</h3>
    <table>
        <td>Id</td>
        <td>Name</td>
        <td>Date</td>
        <td>Image</td>

    {% for recipe in recipes %}
        <td>{{ recipe.id }}</td>
        <td>{{ recipe.title }}</td>
        <td>{{ recipe.createdAt | date('d-m-Y') }}</td>
        <td><img width="100px" src="{{ asset('assets/upload/' ~ recipe.image) }}" alt=""></td>
        <td><a href="{{ path('admin_recipe_delete', {'id': recipe.id}) }}">Supprimer</a></td>
    </table>

    {% endfor %}
{% endblock body %}