{% extends "public/base.html.twig" %}


{% block title %}Accueil | Les recettes de Salimou{% endblock %}

{% block body %}

<main>

    <h3>Les recettes</h3>
    {% for recipe in recipes %}

        <article>
            <p>{{ recipe.title }}</p>

            <img width="100px" src="{{ asset('assets/upload/' ~ recipe.image) }}" />
            <a href="{{ path('show_recipe', {id: recipe.id}) }}">Voir la recette</a>
        </article>
    {% endfor %}
</main>

{% endblock body %}